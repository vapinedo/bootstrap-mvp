{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["*"],
      "@core/*": ["core/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@icons/*": ["icons/*"],
      "@shared/*": ["shared/*"],
      "@context/*": ["context/*"],
      "@modules/*": ["modules/*"],
      "@components/*": ["components/*"],
    }
  },
}
